<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:property-placeholder location="classpath:jdbc.properties"/>
	<context:property-override location="classpath:override.properties"/>
	
	<bean id="employee" name="e1 e2" class="org.fkit.springboot.test.model.Employee"/>
	
	<bean id="manager" class="org.fkit.springboot.test.model.Employee$Manager"/>
		
	<!--bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<value>classpath:jdbc.properties</value>
		</property>
		<property name="properties">
			<value>jdbc.name.class=org.fkit.springboot.test.model.Employee</value>
		</property>
	</bean-->
	
	<bean id="emp" class="org.fkit.springboot.test.model.Employee">
		<constructor-arg name="age" value="30"/>
		<constructor-arg name="name" value="Tom"/>
	</bean>
	
	<bean id="book" class="org.fkit.springboot.test.model.EnglishBook" 
		scope="prototype" parent="bookTemplate">
		<property name="username" value="${jdbc.username}"/>
	</bean>
	
	<bean id="enBook" class="org.fkit.springboot.test.model.EnglishBook" 
		init-method="initBook" destroy-method="destroyBook" parent="bookTemplate"/>
	
	<bean id="student" class="org.fkit.springboot.test.model.Student" 
		autowire="byName">
		<lookup-method name="createBook" bean="book"/>
	</bean>
	
	<bean id="bookTemplate" abstract="true">
		<property name="story" value="Hello world!!"/>
	</bean>
	
	<bean id="myProcessor" class="org.fkit.springboot.test.model.MyBeanPostProcessor"/>
	
	<bean id="teacher" class="org.fkit.springboot.test.model.Teacher">
		<property name="name" value="Howie"/>
	</bean>
	
	<context:annotation-config/>
</beans>