	private boolean ans = false;
	private boolean[][] memo = null;
	private char[][] board = null;
	public boolean exist(char[][] board, String word) {
	     if(word == null || word.length() == 0) {
	        return true;
	     }
	     if(board == null || board.length == 0 || board[0].length == 0) {
	        return false;
	     }
	     
	     this.board = board;
	     int m = board.length, n = board[0].length;
	     this.memo = new boolean[m][n];
	     for(int i = 0; i < m; i++) {
	        for(int j = 0; j < n; j++) {
	            if(search(i, j, word, 0)) {
	            	return true;
	            }
	        }
	     }
	     return false;
	}

	public boolean search(int i, int j, String word, int start) {
		int m = board.length, n = board[0].length, len = word.length();
		boolean flag = false;
	    if(start < len && board[i][j] == word.charAt(start)) {
			if(start == len-1) {
				return true;
			} else {
				memo[i][j] = true;
				int[] index = {i-1, j, i+1, j, i, j-1, i, j+1};
				for(int k = 0; k < index.length && !flag; k=k+2) {
			        int row = index[k];
			        int column = index[k+1];
			        if(row >= 0 && row < m && column >= 0 && column < n && !memo[row][column]) {
			        	flag = search(row, column, word, start+1);
			        }
			    }
			    memo[i][j] = false;
			}
		}
	    
	    return flag;
	}
	
 }
