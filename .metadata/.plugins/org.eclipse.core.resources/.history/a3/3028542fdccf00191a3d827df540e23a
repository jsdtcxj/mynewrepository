	public String baseNeg2(int N) {
	    if(N == 0) return "0";
	    StringBuilder sb = new StringBuilder();
	    while( N != 0) {
	        if(N%2 == 0) {
	            sb.append('0');
	            N = N/(-2);
	        } else {
	            sb.append('1');
	            N = (N-1)/(-2);
	        }
	    }
	    StringBuilder ans = new StringBuilder();
	    for(int i = sb.length()-1; i >= 0; i--) {
	        ans.append(sb.charAt(i));
	    }
	    return ans.toString();
	}


}
