	public int largestSumAfterKNegations(int[] A, int K) {
	    Arrays.sort(A);
	    int sum = 0, temp = 0;;
	    for(int i = 0; i < A.length; i++) {
	        temp = A[i];
	        if(K > 0) {
	            if(temp < 0) {
	                temp = 0 - temp;
	                K--;
	            } else {
	                if(temp%2 > 0) {
	                    if(i-1 >= 0 && Math.abs(A[i-1]) < temp) {
	                        temp = A[i-1]*2+temp;
	                    } else {
	                        temp = 0 - temp;
	                    }
	                }
	                K = 0;
	            }
	        } 
	        sum += temp;
	    }
	    return sum;
	}
}
