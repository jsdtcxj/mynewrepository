	public int strStr(String haystack, String needle) {
        if(needle == null || needle.length() == 0) return 0;
        char[] text = haystack.toCharArray();
        char[] str = needle.toCharArray();
        int[] next = populateNext(str);
        int len = text.length;
        int i = 0, j = 0;
        while(i < len) {
            if(j == -1 || text[i] == str[j]) {
                i++;
                j++;
            } else {
                j = next[j];
            }
            if(j == str.length) return i-j;
        }
        return -1;
    }

    public int[] populateNext(char[] strs) {
        int[] next = new int[strs.length];
        next[0] = -1;
        int i = 0, j = -1;
        while(i < strs.length) {
            if(j == -1 || strs[i] == strs[j]) {
                i++;
                j++;
                if(i < strs.length) {
                    next[i] = j;
                }
            } else {
                j = next[j];
            }
        }

        return next;
    }
}
