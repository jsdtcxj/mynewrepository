	private int[] status;
    public boolean canJump(int[] nums) {
        int len = nums.length;
        if(len == 1) return true;
        
        status = new int[len];
        return jump(nums, 0, len-1);
    }
    
    public boolean jump(int[] nums, int index, int rest) {
        if(rest == 0) {
            return true;
        } else {
            for(int i = 1; i <= nums[index]; i++) {
                if(nums[index+i]-rest+i >= 0) {
                    status[index+i] = 1;
                    return true;
                } else {
                    if(status[index+i] == 0) {
                        return jump(nums, index+i, rest-i);
                    } else if(status[index+i] > 0){
                        return true;
                    } 
                }
            }
        }
        status[index] = -1;
        return false;
    }
}
