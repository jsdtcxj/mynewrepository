	private int count = 0;
    public int numEnclaves(int[][] A) {
        int row = A.length, column = A[0].length;
        int[][] memo = new int[row][column];
        int total = 0;
        for(int i = 0; i < row; i++) {
            for(int j = 0; j < column; j++) {
                int num = A[i][j];
                if(num == 1) total++;
                if(i == 0 || j == 0 || i == row-1 || j == column-1) {
                    if(num == 1 && memo[i][j] != 1) findTrueOne(A, memo, i, j, row, column);
                }
            }
        }
        System.out.println("Total: " + total + ", count: " + count);
        return total-count;
    }
    
    public void findTrueOne(int[][] A, int[][] memo, int i, int j, int row, int column) {
        count++;
        memo[i][j] = 1;
        System.out.println(i + " , " + j);
        int[] list = {i, j-1, i-1, j, i+1, j, i, j+1};
        for(int k = 0; k < list.length; k=k+2) {
            int r = list[k], c = list[k+1];
            System.out.println("next: " + r + " , " + c);
            if(r >= 0 && r < row && c >= 0 && c < column) {
                if(A[r][c] == 1 && memo[i][j] != 1) {
                    findTrueOne(A, memo, r, c, row, column);
                }
            }
        }
    }
}
