package com.chs.springBoot.springBoot;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.chs.springBoot.springBoot.entity.Book;
import com.chs.springBoot.springBoot.repository.BookRepository;

/**
 * Hello world!
 *
 */
@SpringBootApplication
public class App 
{
	private static final Logger log = LoggerFactory.getLogger(App.class);
	
	@Autowired
	private BookRepository bookRepository;
	
    public BookRepository getBookRepository() {
		return bookRepository;
	}

	public void setBookRepository(BookRepository bookRepository) {
		this.bookRepository = bookRepository;
	}

	public static void main( String[] args )
    {
        log.info( "Hello World2!" );
        
        SpringApplication.run(App.class, args);
        
        App app = new App();
        BookRepository repository = app.getBookRepository();
        repository.save(new Book("Java"));
        log.info(repository.findByName("Java"));
    }
}
