	public void rotate(int[][] matrix) {
        if(matrix != null && matrix.length > 0) {
            int len = matrix.length;
            int max = len*len/2+1;
            int temp1 = 0, temp2 = 0;
            boolean odd = len%2 > 0;
            int half = odd? (len/2+1): (len/2);
            for(int i = 0; i < half; i++) {
                for(int j = (odd?i:0); j < half; j++) {
                    int row = i, col = j, index;
                    temp1 = matrix[i][j];
                    for(int k = 0; k < 4; k++) {
                    	index = row;
                        row = col;
                        col = len-index-1;
                        temp2 = matrix[row][col];
                        matrix[row][col] = temp1;
                        temp1 = temp2;
                    }
                }
            }
        }
	}

}
